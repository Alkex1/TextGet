<body style="background-color:lightblue">

<h1> Index </h1>
<section>

<% if false %> <form action="<%= textbooks_path %>" method="GET">
        <input type="search" name="search" />
    </form>
    <% end %>

<%= form_with url: textbooks_path, method: "get", local: true do |form| %>
	<%= form.label :search %>
	<%= form.text_field :search %>
	<%= form.submit "Search" %>
<% end %>

<% @subject.each do |subject| %>
    <%= link_to(subject) do %>
        <p> <%= subject.name %> </p>
        <% end %>
<% end %>


<% @textbook.each do |textbook| %>
    <%= link_to(textbook) do %>
        <p> <%= textbook.name %> </p>
        <% end %>
<% end %>



</section>
</body>