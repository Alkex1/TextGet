<body style="background-color:lightblue">
<%= render "nav_bar", textbook: @textbook %>

<h1> Index </h1>
<%= form_with url: textbooks_path, method: "get", local: true do |form| %>
	<%= form.label :search %>
	<%= form.text_field :search %>
	<%= form.submit "Search" %>
<% end %>

<section>

<% if false %> <form action="<%= textbooks_path %>" method="GET">
        <input type="search" name="search" />
    </form>
    <% end %>



<div class="navdiv">
<h3>Common Subjects: </h3>

<% @subject.each do |subject| %>
<div style="margin-right: 10px;">
    <%= link_to(subject) do %>
        <p> <%= subject.name %> </p>
        <% end %>
</div>
<% end %>
</div>


<% @textbook.each do |textbook| %>
<div class="divi">
    <%= link_to(textbook) do %>
            <p> <%= textbook.name %> </p>
        <% end %>
        <% if textbook.price != nil %>
            <p>$<%= textbook.price / 100.0 %> </p>
        <% else %>
            <p>price n/a</p>
        <% end %>
        <% if textbook.picture.attached? %>
        <%= image_tag textbook.picture %>
        <% else %>
            <%= image_tag "book.png", alt: "book" %>
        <% end %>
</div>

<% end %>


</section>
</body>